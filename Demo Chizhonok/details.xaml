<Window x:Class="Demo_Chizhonok.details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Chizhonok"
        mc:Ignorable="d"
        Title="details" Height="500" Width="800">
    <StackPanel>
        <Button x:Name="reload" Content="Перезагрузить Программу"  Height="40" Margin="10" Click="reload_Click" Width="160"/>
        <Label Width="500" Content="Исполнитель" HorizontalContentAlignment="Center" FontSize="20"/>
        <Label Content="Название"/>
        <TextBox x:Name="_1"/>
        <Label Content="дата"/>
        <Calendar x:Name="_2" HorizontalAlignment="Left" Margin="10"/>
        <Label Content="номер склада"/>
        <TextBox x:Name="_3"/>
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click" Content="Add" Margin="10" Height="40" Width="100" HorizontalAlignment="Left"/>
            <Button Click="Button_Click_1" Content="back" Margin="10" Height="40" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</Window>
