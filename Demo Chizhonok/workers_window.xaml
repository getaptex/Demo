<Window x:Class="Demo_Chizhonok.workers_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Chizhonok"
        mc:Ignorable="d"
        Title="workers_window" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="reload" Content="Перезагрузить Программу"  Height="40" Margin="10" Click="reload_Click" Width="160"/>
        <Label Width="500" Content="Исполнитель" HorizontalContentAlignment="Center" FontSize="20"/>
        <Label Content="Имя"/>
        <TextBox x:Name="_1"/>
        <Label Content="Фамилия"/>
        <TextBox x:Name="_2"/>
        <StackPanel Orientation="Horizontal">
            <Button Click="Button_Click" Content="Add" Margin="10" Height="40" Width="100" HorizontalAlignment="Left"/>
            <Button Click="Button_Click_1" Content="back" Margin="10" Height="40" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</Window>
